{
  "name": "@mollify/cli",
  "version": "0.2.11",
  "description": "",
  "main": "bin/index.js",
  "bin": {
    "mollify": "bin/index.js"
  },
  "scripts": {
    "test": "jest",
    "build": "tsup src/index.ts --format esm,cjs --dts --out-dir bin",
    "start": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint --ext .ts src/",
    "lint:fix": "eslint --fix --ext .ts src/",
    "format": "prettier --write 'src/**/*.{ts,json}'",
    "format:check": "prettier --check 'src/**/*.{ts,json}'",
    "prepare": "npm run build",
    "postinstall": "npm run build"
  },
  "keywords": [],
  "author": "",
  "license": "GPL",
  "devDependencies": {
    "@types/cli-progress": "^3.11.0",
    "@types/fs-extra": "^11.0.1",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "esbuild": "^0.18.14",
    "esbuild-plugin-tsc": "^0.4.0",
    "eslint": "^8.38.0",
    "glob": "^10.2.5",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsup": "^7.1.0"
  },
  "dependencies": {
    "@mollify/types": "^0.2.11",
    "cli-progress": "^3.12.0",
    "commander": "^10.0.0",
    "enquirer": "^2.3.6",
    "fs-extra": "^11.1.1",
    "gray-matter": "^4.0.3",
    "simple-git": "^3.18.0",
    "slugify": "^1.6.6",
    "typescript": "^5.0.4",
    "yargs": "^17.7.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,json}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.ts": [
      "jest --findRelatedTests",
      "tsc --noEmit"
    ]
  }
}
